/* Vars */
<% size = 18 %>
<% opacity = 0.85 %>
<% footer = 50 %>


/* Responsive */
@media screen and (max-width: 950px) {
	html 				{ background-size: cover !important; }
	.container .error	{ width: 55% !important; }
}

/* Styling */
*  { margin: 0; }
html, body, .container { height: 100%; }
html {
	height: 100%;
	background: #010008 url(<%= asset_url("exception_handler/bg.jpg") %>) top left no-repeat;
	background-size: 100% 100%;
}

body, a { color: #fff; text-decoration: none; }
a:hover { text-decoration: underline; }
body 	{
	font-family: Helvetica, Arial, Sans-Serif;
	font-size: 13px;
	text-transform: capitalize;
	text-shadow: 0px 2px 0px rgba(0,0,0,0.5);
}


.container {
	min-height: 100%;
	overflow-y: hidden; /* Shouldn't need to have this */
	margin-bottom: -<%= footer * 1.2 %>px;
}

.container .error {
	display: block;
	padding: 30px;
	margin: 10% auto 0;
	width: 25%;
	text-align: center;
	outline: 1px solid rgba(0,0,0,1);
	background: rgba(255,255,255,0.075);
	border: 1px solid rgba(255,255,255,0.2);
	-webkit-transition: width 0.15s ease-in-out;
	-moz-transition: 	width 0.15s ease-in-out;
	-ms-transition: 	width 0.15s ease-in-out;
	-o-transition: 		width 0.15s ease-in-out;
	transition: 		width 0.15s ease-in-out;
}

.container .error img.alert {
	display: block;
	margin: 0 auto 20px auto;
}

.container .message > * {
	display: block;
}

.container .message strong {
	font-weight: bold;
	font-size: 2em;
	margin: 0;
	color: #ff0000;
}

.container .message span {
	margin: 5px auto 0;
	font-size: 0.75em;
}

/* Footer */
footer {
	display: block;
	clear: both;
	width:   90%;
	height:  45px;
	margin:  15px auto 0;
	padding: 0 15px;
	border-top: 1px solid rgba(255,255,255,0.2);
	box-sizing: border-box;
	max-height: <%= footer %>;
}

footer .app  		{ text-transform: uppercase; }
footer .app strong  { font-size: 0.9em; letter-spacing: 1px; }
footer .app span    { font-size: 0.85em; }

footer .connect {
	display: block;
	float: right;
	clear: both;
	text-align: center;
	vertical-align: middle;
}

footer .connect:hover a { opacity: <%= opacity * 0.5 %>; }
footer .connect a 		{
	display: inline-block;
	opacity: <%= opacity * 0.85 %>;
	padding: 10px 4px 10px 0;
	margin: 0 -1px; /* Use 0 -1px for inline block & ERB - HAML removes whitespace; ERB does now - http://haml.info/docs/yardoc/file.REFERENCE.html#whitespace_removal__and_ */
	transition: opacity 0.2s ease;
}

footer .connect a img 				{ display: block; vertical-align: middle; }
footer .connect a.facebook img 		{ height: <%= size * 0.85 %>px; }
footer .connect a.twitter  img		{ height: <%= size * 0.85 %>px; }
footer .connect a.linkedin img		{ height: <%= size * 0.9 %>px; }
footer .connect a.youtube  img		{ height: <%= size * 0.9 %>px; }
footer .connect a.fusion   img		{ height: <%= size * 1.05 %>px; }
footer .connect:hover a:hover 		{ opacity: 1; }