/* Vars */
<% size 	= 18 %>
<% opacity 	= 0.85 %>
<% footer 	= 50 %>
<% radius 	= 5 %>


/* Responsive */
@media screen and (max-width: 950px) {
	html 				{ background-size: cover !important; }
	.container .error	{ width: 55% !important; }
}

/* Styling */
*  { margin: 0; }
html, body, .container { height: 100%; }
html {
	height: 100%;
	background: #010008 url(<%= asset_url("exception_handler/bg.jpg") %>) top left no-repeat;
	background-size: 100% 100%;
}
body {
	font-family: Helvetica, Arial, Sans-Serif;
	font-size: 14px;
	text-transform: capitalize;
}

a { color: #fff; text-decoration: none; }
a:hover { text-decoration: underline; }

.container {
	min-height: 100%;
	overflow-y: hidden; /* Shouldn't need to have this */
	margin-bottom: -<%= footer * 1.2 %>px;
}

.container .error {
	display: block;
	margin: 10% auto 0;
	width: 25%;
	color: #000;
	text-align: center;
	background: rgba(255,255,255,1);
	border: 1px solid rgba(0,0,0,1);
	border-radius: <%= radius %>px;

	-moz-background-clip: padding;  
	-webkit-background-clip: padding-box;
	background-clip: padding-box;  

	-webkit-transition: width 0.15s ease-in-out;
	-moz-transition: 	width 0.15s ease-in-out;
	-ms-transition: 	width 0.15s ease-in-out;
	-o-transition: 		width 0.15s ease-in-out;
	transition: 		width 0.15s ease-in-out;
}

.container .error img.alert {
	display: block;
	margin: 0 auto 20px auto;
}

.container .message > * 	{ display: block; }
.container .message .title {
	display: block;
	position: relative;
	font-weight: bold;
	font-size: 0.85em;
	margin: 0;
	color: rgba(255,255,255,1);
	background: rgba(58,0,97,1);
	padding: 12px 15px;
	text-align: left;

	/* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#7a07ed+0,000000+100&amp;0+0,1+100 */
	background: rgba(58,0,97,1) -moz-linear-gradient(top,  rgba(122,7,237,0) 0%, rgba(0,0,0,0.4) 100%); /* FF3.6+ */
	background: rgba(58,0,97,1) -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(122,7,237,0)), color-stop(100%,rgba(0,0,0,0.4))); /* Chrome,Safari4+ */
	background: rgba(58,0,97,1) -webkit-linear-gradient(top,  rgba(122,7,237,0) 0%,rgba(0,0,0,0.4) 100%); /* Chrome10+,Safari5.1+ */
	background: rgba(58,0,97,1) -o-linear-gradient(top,  rgba(122,7,237,0) 0%,rgba(0,0,0,0.4) 100%); /* Opera 11.10+ */
	background: rgba(58,0,97,1) -ms-linear-gradient(top,  rgba(122,7,237,0) 0%,rgba(0,0,0,0.4) 100%); /* IE10+ */
	background: rgba(58,0,97,1) linear-gradient(to bottom,  rgba(122,7,237,0) 0%,rgba(0,0,0,0.4) 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#007a07ed', endColorstr='#000000',GradientType=0 ); /* IE6-9 */
}
.container .message .title:after {
	position: absolute;
	content: "";
	width: 100%;
	height: 1px;
	background: rgba(255,255,255,0.15);
	left: 0;
	bottom: 1px;
}

.container .message > .info {
	display: block;
	padding: 15px;
	margin: 5px auto 0;
	font-size: 0.75em;
	background: rgba(232,232,232,1);
	border-top: 1px solid rgba(214,214,214,1);
}
.container .message > .info > * { display: block; }
.container .message > .info strong {
	display: inline-block;
	margin: 5px 0;
}


/* Footer */
footer {
	display: display;
	vertical-align: middle;
	clear: both;
	color: #fff;
	margin:  15px auto 0;
	padding: 14px 1%;
	background: rgba(0,0,0,1);
	box-sizing: border-box;
	max-height: <%= footer %>;
}

footer .app  		{ text-transform: uppercase; }
footer .app strong  { font-size: 0.9em; letter-spacing: 1px; }
footer .app span    { font-size: 0.85em; }

footer .connect {
	display: block;
	float: right;
	clear: both;
	text-align: center;
}

footer .connect:hover a { opacity: <%= opacity * 0.5 %>; }
footer .connect a 		{
	display: inline-block;
	opacity: <%= opacity * 0.85 %>;
	padding-left: 4px;
	margin: 0 -1px; /* Use 0 -1px for inline block & ERB - HAML removes whitespace; ERB does now - http://haml.info/docs/yardoc/file.REFERENCE.html#whitespace_removal__and_ */
	transition: opacity 0.2s ease;
}

footer .connect a img 				{ display: block; vertical-align: middle; }
footer .connect a.facebook img 		{ height: <%= size * 0.85 %>px; }
footer .connect a.twitter  img		{ height: <%= size * 0.85 %>px; }
footer .connect a.linkedin img		{ height: <%= size * 0.9 %>px; }
footer .connect a.youtube  img		{ height: <%= size * 0.9 %>px; }
footer .connect a.fusion   img		{ height: <%= size * 1.05 %>px; }
footer .connect:hover a:hover 		{ opacity: 1; }